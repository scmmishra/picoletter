# Server
SERVER_IP=YOUR_SERVER_IP
APP_DOMAIN=your.domain.com

# Registry (defaults to localhost:5555 if not set)
# REGISTRY_SERVER=localhost:5555
# REGISTRY_USERNAME=
# REGISTRY_PASSWORD=

# Rails
SECRET_KEY_BASE=generate_with_bin_rails_secret

# Database
DATABASE_URL=postgresql://user:pass@localhost/picoletter_production
QUEUE_DATABASE_URL=postgresql://user:pass@localhost/picoletter_production_queue
CACHE_DATABASE_URL=postgresql://user:pass@localhost/picoletter_production_cache

# Performance tuning
WEB_CONCURRENCY=2
RAILS_MAX_THREADS=5
JOB_CONCURRENCY=2
SEND_POST_BATCH_SIZE=100

# App
PICO_HOST=https://your.domain.com
PICO_SENDING_DOMAIN=your.domain.com
PICO_SUPPORT_EMAIL=support@your.domain.com
ADMIN_API_KEY=generate_a_secure_key
BILLING_API_KEY=generate_a_secure_key
INVITE_CODE=

# AWS SES
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-east-1
AWS_SES_CONFIGURATION_SET=your_config_set

# Cloudflare R2 (optional, for file storage)
R2__ACCESS_KEY=
R2__ACCESS_SECRET=
R2__BUCKET_NAME=
R2__ACCOUNT_ID=
R2__PUBLIC_DOMAIN=

# OAuth (optional)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Monitoring (optional)
RORVSWILD__API_KEY=
BETTERSTACK__LOGS_TOKEN=

# Feature flags
ENABLE_BILLING=false
ENABLE_AUTO_REMINDERS=false
ENABLE_SCHEDULING=true
