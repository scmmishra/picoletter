#!/bin/bash -e

# If running the rails server (directly or via thrust) then create or migrate existing database
if [ "${1}" == "./bin/rails" ] && [ "${2}" == "server" ]; then
  ./bin/rails db:prepare
elif [ "${1}" == "./bin/thrust" ] && [ "${2}" == "./bin/rails" ] && [ "${3}" == "server" ]; then
  ./bin/rails db:prepare
fi

exec "${@}"
