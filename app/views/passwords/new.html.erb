<div class="max-w-md py-20 mx-auto relative">
  <div
    class="
      inline-flex items-center justify-center w-10 h-10 mb-4 text-stone-500
      bg-stone-50 rounded-lg shadow sm:-left-14 sm:absolute outline-1 outline
      outline-stone-200
    "
  >
    <%= lucide_icon("fingerprint", class: "size-6") %>
  </div>

  <h1 class="text-3xl text-stone-900">Forgot your password?</h1>

  <p class="mt-2 text-xl text-stone-700">
    No worries, we will send you the reset instructions.
  </p>

  <div class="p-6 pt-5 mt-6 bg-white border shadow-sm rounded-xl pb-7 border-neutral-200">
    <%= labeled_form_with url: passwords_path, class: "flex flex-col gap-4" do |form| %>
      <%= form.email_field :email,
                       required: true,
                       class: "input w-full",
                       autofocus: true,
                       autocomplete: "username",
                       placeholder: "Enter your email address",
                       value: params[:email] %>
      <%= hashcash_hidden_field_tag %>
      <div class="mt-1"><%= form.submit "Email reset instructions", class: "btn btn-primary w-full" %></div>
    <% end %>
  </div>
</div>

<% content_for :head do %>
  <%= javascript_include_tag "hashcash", "data-turbo-track": "reload", defer: true %>
<% end %>
