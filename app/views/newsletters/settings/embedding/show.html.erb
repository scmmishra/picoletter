<%= render "newsletters/settings/partials/header" %>

<div class="space-y-8">
  <%= render "newsletters/settings/partials/settings_section", title: "Redirect Settings", subtitle: "Optionally configure where users should be redirected after subscribing or confirming their email address." do %>
    <%= labeled_form_with model: @newsletter, url: settings_embedding_path(slug: @newsletter.slug), method: :patch, class: "max-w-lg space-y-4", permission: :embedding do |form| %>
      <%= form.url_field :redirect_after_subscribe,
                     placeholder: "https://example.com/thank-you",
                     label: "After Subscribe URL",
                     hint:
                       "URL to redirect users to after they fill out the subscription form." %>

      <%= form.url_field :redirect_after_confirm,
                     placeholder: "https://example.com/welcome",
                     label: "After Confirm URL",
                     hint:
                       "URL to redirect users to after they confirm their email address." %>
      <div><%= form.submit "Save Changes", class: "btn btn-primary" %></div>
    <% end %>
  <% end %>

  <%= render "newsletters/settings/partials/settings_section" do %>
    <div class="flex items-start justify-between mb-5">
      <div class="max-w-lg text-stone-600">
        <p>
          Below is an example of customizable HTML code for an email subscription form that you can easily integrate and
          style to match your site.
        </p>
      </div>
      <div>
        <form
          class="code--codeopen-form"
          action="https://codepen.io/pen/define"
          method="POST"
          target="_blank"
        >
          <%= tag.input class: "hidden", name: "data", value: @newsletter.codepen_payload %>
          <button class="font-sans text-sm btn btn-secondary">
            Open in Codepen
          </button>
        </form>
      </div>
    </div>

    <section class="grid grid-cols-2 gap-4">
      <div>
        <div class="relative font-mono text-xs">
          <div class="absolute right-2 pt-2 top-2">
            <%= button_to_copy_to_clipboard(@newsletter.embed_form(with_name: true)) %>
          </div>
          <div class="mt-2 rounded-lg min-h-80 outline outline-1 outline-stone-100" id="form_html">
            <pre class="px-3 py-2 text-xs fallback-code overflow-hidden"><%= @newsletter.embed_form(with_name: true) %></pre>
          </div>
        </div>
        <div class="mt-2 py-3"><%= render "newsletters/settings/partials/label_instructions" %></div>
      </div>
      <div class="relative font-mono text-xs">
        <div class="absolute right-2 pt-2 top-2"><%= button_to_copy_to_clipboard(@newsletter.embed_form_css) %></div>
        <div class="mt-2 rounded-lg min-h-80 outline outline-1 outline-stone-100" id="css_html">
          <pre class="p-2 text-xs fallback-code overflow-hidden"><%= @newsletter.embed_form_css %></pre>
        </div>
      </div>
    </section>
  <% end %>
</div>

<%# NOTE: The innerHTML usage below is intentional for Shiki syntax highlighting of trusted, server-rendered content %>
<script type="module">
  try {
    const { codeToHtml } = await import('https://esm.sh/shiki@3.5.0')

    const formCodeEl = document.getElementById('form_html')
    const cssCodeEl = document.getElementById('css_html')

    formCodeEl.innerHTML = await codeToHtml(`<%= raw @newsletter.embed_form(with_name: true) %>`, {
      lang: 'html',
      theme: 'github-light'
    })

    cssCodeEl.innerHTML = await codeToHtml(`<%= raw  @newsletter.embed_form_css %>`, {
      lang: 'css',
      theme: 'github-light'
    })
  } catch (error) {
    console.error(error)
    console.log('Shiki failed to load, using fallback rendering')
  }
</script>

<style>
  .shiki {
    padding: 0.5rem 0.8rem;
    overflow: scroll;
  }
</style>
