<section class="flex items-center mb-4 justify-between">
  <div class="flex items-center gap-6 text-xl font-medium text-stone-400">
    <%= link_to "General",
    settings_path(slug: @newsletter.slug),
    class:
      (
        if current_page?(settings_path(@newsletter.slug))
          "text-stone-800"
        else
          "hover:text-stone-500"
        end
      ) %>
    <%= link_to "Profile",
    profile_settings_path(slug: @newsletter.slug),
    class:
      (
        if current_page?(profile_settings_path(@newsletter.slug))
          "text-stone-800"
        else
          "hover:text-stone-500"
        end
      ) %>
    <%= link_to "Sending Domain",
    sending_settings_path(slug: @newsletter.slug),
    class:
      (
        if current_page?(sending_settings_path(@newsletter.slug))
          "text-stone-800"
        else
          "hover:text-stone-500"
        end
      ) %>
    <%= link_to "Design",
    design_settings_path(slug: @newsletter.slug),
    class:
      (
        if current_page?(design_settings_path(@newsletter.slug))
          "text-stone-800"
        else
          "hover:text-stone-500"
        end
      ) %>
    <%= link_to "Embedding",
    embedding_settings_path(slug: @newsletter.slug),
    class:
      (
        if current_page?(embedding_settings_path(@newsletter.slug))
          "text-stone-800"
        else
          "hover:text-stone-500"
        end
      ) %>
    <% if AppConfig.get("ENABLE_BILLING", false) %>
      <%= link_to "Billing",
      billing_settings_path(slug: @newsletter.slug),
      class:
        (
          if current_page?(billing_settings_path(@newsletter.slug))
            "text-stone-800"
          else
            "hover:text-stone-500"
          end
        ) %>
    <% end %>
  </div>
</section>
