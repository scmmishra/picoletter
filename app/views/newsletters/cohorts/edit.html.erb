<section class="flex items-center justify-between gap-2 mb-6">
  <h2 class="text-xl font-medium">Edit Cohort</h2>
  <%= link_to cohorts_path(@newsletter.slug), class: 'btn btn-secondary' do %>
    <%= lucide_icon("arrow-left", class: "size-4 mr-1") %>
    Back to Cohorts
  <% end %>
</section>

<%= form_with model: [@newsletter, @cohort], url: cohort_path(@newsletter.slug, @cohort), method: :patch, local: true, class: "space-y-6" do |form| %>
  <% if @cohort.errors.any? %>
    <div class="p-4 bg-red-50 border border-red-200 rounded-lg">
      <h3 class="font-medium text-red-900 mb-2">Please fix the following errors:</h3>
      <ul class="text-sm text-red-700 list-disc list-inside">
        <% @cohort.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="max-w-2xl space-y-4">
    <div class="grid grid-cols-12 gap-4">
      <div class="col-span-2">
        <label class="space-y-1">
          <%= form.label :emoji, "Icon", class: "ml-px text-stone-500 font-sans text-sm" %>
          <%= form.text_field :emoji, 
              placeholder: "ðŸ“Š", 
              class: "input w-full text-center text-lg",
              maxlength: 2 %>
        </label>
      </div>
      <div class="col-span-10">
        <label class="space-y-1">
          <%= form.label :name, "Cohort Name", class: "ml-px text-stone-500 font-sans text-sm" %>
          <%= form.text_field :name, 
              required: true, 
              placeholder: "Premium Subscribers",
              class: "input w-full" %>
        </label>
      </div>
    </div>

    <label class="space-y-1">
      <%= form.label :description, "Description", class: "ml-px text-stone-500 font-sans text-sm" %>
      <%= form.text_area :description, 
          placeholder: "Subscribers who have premium access...",
          class: "input w-full",
          rows: 3 %>
      <p class="text-xs text-stone-400 ml-px">Optional description to help you remember what this cohort is for</p>
    </label>

    <div>
      <label class="block text-stone-500 font-sans text-sm mb-2">
        Filter Conditions
      </label>
      
      <% if @labels.empty? %>
        <div class="p-4 bg-yellow-50 border border-yellow-200 rounded-lg">
          <p class="text-sm text-yellow-700">
            You need to create labels first before you can create cohorts.
            <%= link_to "Create labels", labels_path(@newsletter.slug), class: "underline font-medium" %>
          </p>
        </div>
      <% else %>
        <div class="p-4 bg-stone-50 border border-stone-200 rounded-lg">
          <p class="text-sm text-stone-600 mb-4">
            Build conditions to define which subscribers belong to this cohort.
          </p>
          <!-- TODO: Add rule builder component here -->
          <div class="text-sm text-stone-500">
            Rule builder coming soon. For now, cohorts will include all verified subscribers.
          </div>
        </div>
      <% end %>
    </div>

    <div class="flex items-center gap-2 pt-4">
      <%= form.submit "Update Cohort", class: "btn btn-primary" %>
      <%= link_to "Cancel", cohorts_path(@newsletter.slug), class: "btn btn-secondary" %>
    </div>
  </div>
<% end %>
