<div class="condition-group flex items-center gap-2 p-3 border border-stone-200 rounded-lg bg-stone-50 font-sans">
  <select class="condition-field input w-32" data-rule-builder-target="conditionField">
    <option value="">Select field</option>
    <option value="label">Label</option>
  </select>

  <select class="condition-operator input w-24" data-rule-builder-target="conditionOperator">
    <option value="in">is</option>
    <option value="!in">is not</option>
  </select>

  <select class="condition-value flex-1 p-0 border-0 background-none [&::picker-icon]:hidden [&::picker(select)]:appearance-none focus:outline-none"
          data-rule-builder-target="conditionValue"
          style="appearance: base-select;">
    <button class="input w-full flex items-center justify-between text-left focus:outline-none">
      <div class="flex items-center gap-2">
        <selectedcontent></selectedcontent>
      </div>
    </button>
    <div class="bg-white border border-stone-200 rounded-lg shadow-lg p-1 mt-1">
      <% labels.each do |label| %>
        <option value="<%= label.name %>" class="flex items-center p-2 hover:bg-stone-100 rounded cursor-pointer">
          <div class="flex items-center gap-2">
            <div class="size-3.5 rounded" style="background-color: <%= label.color %>"></div>
            <span><%= label.name %></span>
          </div>
        </option>
      <% end %>
    </div>
  </select>

  <%= link_to remove_condition_cohorts_path(newsletter.slug, condition_id: condition_id),
      class: "text-red-500 hover:text-red-700",
      data: { turbo_method: :post } do %>
    <%= lucide_icon("x", class: "size-4") %>
  <% end %>
</div>
