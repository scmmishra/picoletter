<div class="rule-group border border-stone-300 rounded-lg p-4 bg-white">
  <div class="flex items-center gap-2 mb-3">
    <select class="group-operator input w-20" data-rule-builder-target="groupOperator">
      <option value="and">AND</option>
      <option value="or">OR</option>
    </select>
    <span class="text-sm text-stone-500">group</span>
    <button type="button" class="remove-group text-red-500 hover:text-red-700 ml-auto" data-action="click->rule-builder#removeGroup">
      <%= lucide_icon("x", class: "size-4") %>
    </button>
  </div>

  <div class="conditions-container space-y-2" data-rule-builder-target="conditionsContainer">
    <!-- Conditions will be added here -->
  </div>

  <div class="flex items-center gap-2 mt-3">
    <button type="button" class="btn btn-sm btn-clear" data-action="click->rule-builder#addConditionToGroup">
      <%= lucide_icon("plus", class: "size-3") %>
      Add Condition
    </button>
  </div>
</div>
