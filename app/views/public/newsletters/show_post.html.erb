<main class=" max-w-xl pt-20 pb-10 mx-auto min-h-screen ">
  <section class="mb-2 flex gap-5 justify-between items-start">
    <div
      class="
        text-stone-500 font-sans uppercase tracking-wider font-semibold text-xs
      "
    >
      <%= link_to(
        @newsletter.title,
        public_newsletter_path,
        class: "text-stone-500 hover:text-stone-700 duration-200 transition-colors"
      ) %>
      /
      <%= link_to(
        "Archive",
        public_newsletter_all_posts_path,
        class: "text-stone-500 hover:text-stone-700 duration-200 transition-colors"
      ) %>
    </div>
    <div class="text-sm text-stone-500 font-sans">
      Published on
      <span class="font-medium text-stone-800"><%= @post.published_at.strftime("%B %e, %Y") %></span>
    </div>
  </section>
  <article
    class="
      prose prose-headings:text-newsletter-primary
      prose-a:text-[var(--pl-primary-color)]
    "
  >
    <h1 class="text-3xl"><%= @post.title %></h1>
    <%= @post.content %>
  </article>
  <hr class="my-8"/>
  <footer class="max-w-xl mx-auto">
    <p class="text-lg text-stone-700 mb-4">
      Don't miss what's next. Subscribe to
      <%= @newsletter.title %>
    </p>
    <%= render "public/newsletters/partials/subscribe" %>
    <p class="text-sm text-stone-500 text-center">This newsletter is managed by
      <%= link_to "Picoletter", "/", class: "text-zinc-500 hover:underline" %>.
    </p>
  </footer>
</main>
