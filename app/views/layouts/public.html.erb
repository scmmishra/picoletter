<!DOCTYPE html>

<html>
  <head>
    <title><%= @newsletter.title %></title>

    <meta name="viewport" content="width=device-width,initial-scale=1">

    <link rel="icon" href="/favicon.png" type="image/x-icon">

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%= javascript_include_tag "hashcash", "data-turbo-track": "reload", defer: true %>
    <style>
      :root {
        <%= @newsletter.primary_styles %>;
      }
    </style>
  </head>

  <body class="bg-stone-100 <%= @newsletter.font_class || "font-serif" %>">
    <% if notice = flash[:notice] || flash[:alert] %>
      <div class="flash" data-controller="element-removal" data-action="animationend->element-removal#remove">
        <div
          class="
            flex items-center justify-center px-4 py-2 m-auto mt-3 font-sans text-sm
            text-white rounded-md shadow-sm bg-stone-900 font-sm flash__inner
          "
        >
          <%= notice %>
        </div>
      </div>
    <% end %>

    <main class="container px-5 mx-auto"><%= yield %></main>
  </body>
</html>
