<%= link_to post.published? ? post_path(slug: post.newsletter.slug, id: post.id) : edit_post_path(slug: post.newsletter.slug, id: post.id), class: "grid grid-cols-10 py-4 hover:bg-gradient-to-r from-slate-50/10 via-stone-50 to-slate-50/10" do %>
  <div class="col-span-4">
    <h2><%= post.title %></h2>
  </div>

  <div class="col-span-3 font-sans text-sm leading-6 text-right text-stone-500">
    <% if post.published? %>
      Published on
      <b class="font-medium text-stone-700"><%= post.published_on_date %></b>
    <% elsif post.scheduled_at.present? %>
      Scheduled for
      <span class="font-medium text-stone-800"
            data-controller="utc-time"
            data-utc-time-epoch-ms-value="<%= post.scheduled_at.to_i * 1000 %>"
            data-utc-time-format-value="date"><%= post.scheduled_at.utc.strftime("%B %e, %Y UTC") %></span>
      at
      <span class="font-medium text-stone-800"
            data-controller="utc-time"
            data-utc-time-epoch-ms-value="<%= post.scheduled_at.to_i * 1000 %>"
            data-utc-time-format-value="time"
            data-utc-time-options-value='{"timeZoneName":"short"}'><%= post.scheduled_at.utc.strftime("%H:%M UTC") %></span>
    <% else %>
      <span class="text-stone-500">â€”</span>
    <% end %>
  </div>

  <div class="col-span-3 font-sans text-sm leading-6 text-right text-stone-500">
    Created on <b class="font-medium text-stone-700"><%= post.created_at.strftime("%B %d, %Y") %></b>
  </div>
<% end %>
