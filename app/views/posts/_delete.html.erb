<%= post_action_card(
  title: "Delete this post",
  description: "This is an unpublished post, deleting this means you will lose this forever.",
  layout: :inline
) do %>
  <%= link_to "Delete forever",
  post_path(slug: post.newsletter.slug, id: post.id),
  class: "btn btn-danger",
  data: {
    turbo_method: :delete,
    turbo_confirm: "Are you sure you want to delete this post?",
  } %>
<% end %>
