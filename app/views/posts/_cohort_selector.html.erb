<%= post_action_card(
  title: "Choose audience",
  description: "Select which cohort to send this post to, or send to all subscribers."
) do %>
  <%= form_with model: post, url: post_path(slug: post.newsletter.slug, id: post.id), method: :patch do |form| %>
    <div class="flex w-full gap-2 mt-1">
      <div class="flex-grow">
        <%= form.label :cohort_id, "Send to", class: "block text-sm font-medium text-stone-700 sr-only" %>
        <select name="<%= form.object_name %>[cohort_id]" class="input w-full cohort-select" style="padding-left: 12px;">
          <button class="w-full px-4 py-2 border-0 rounded-lg ring-1 ring-inset ring-stone-300 focus:ring-2 focus:ring-inset focus:ring-stone-600 bg-white">
            <div class="flex items-center gap-2">
              <selectedcontent class="flex items-center gap-2"></selectedcontent>
            </div>
          </button>
          <div>
            <option value="" class="px-4 py-3 border-none hover:bg-stone-50">
              <div class="flex items-center gap-2">
                <%= cohort_icon(icon: 'user-group', color: '#EF4444', size: 'md') %>
                <span class="flex-1">All subscribers</span>
                <span class="bg-stone-100 text-stone-600 text-xs px-2 py-1 rounded-full font-medium flex-shrink-0"><%= post.newsletter.subscribers.verified.count %></span>
              </div>
            </option>
            <% post.newsletter.cohorts.each do |cohort| %>
              <option value="<%= cohort.id %>" class="px-4 py-3 border-none hover:bg-stone-50" <%= 'selected' if post.cohort_id == cohort.id %>>
                <div class="flex items-center gap-2">
                  <%= cohort_icon(icon: cohort.icon, color: cohort.color, size: 'md') %>
                  <span class="flex-1"><%= cohort.name %></span>
                  <span class="bg-stone-100 text-stone-600 text-xs px-2 py-1 rounded-full font-medium flex-shrink-0"><%= cohort.subscriber_count %></span>
                </div>
              </option>
            <% end %>
          </div>
        </select>
      </div>
      <div class="flex-shrink-0">
        <%= form.submit "Update Audience", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
<% end %>
